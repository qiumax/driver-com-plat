extends layouts/master


block content
    div.row-fluid(style="padding-top:20px;")
        div.widget.widget-padding.span12
            div.widget-header
                i.icon-list-alt
                h5 在线充值
            div.widget-body
                div.widget-forms.clearfix
                    form#form.form-horizontal(action="/api/finance/add", method="POST")
                        div.control-group
                            label.control-label 充值金额：
                            div.controls
                                input.span7(type="text", name="money",id="money", required)
                                p#phone_hint.help-block.text-red




            div.widget-footer
                button.btn.btn-primary(type="button" onclick="submitform()") 提交

    script.

        function submitform() {
            console.log('--')
            $("#form").submit();//表单提交
        }

